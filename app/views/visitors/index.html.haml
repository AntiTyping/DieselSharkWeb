.container.mobile-app
  .row.first_row
    .col-md-5
      .mobile-app-two-phones
        = image_tag('two-phones.png', class: 'two-phones')
    .col-md-7
      .mobile-app-name
        = image_tag('name-with-logo.png', class: 'name-with-logo')
      .mobile-app-pump
        = image_tag('pump.png', class: 'pump')

.container.mobile-app-store-links
  .row.second_row
    .col-md-6
      .great-app
        = image_tag('great-app.png', class: 'great-app')
      .great-app-text
        %h2.drivers_choose Drivers choose Diesel Shark to better manage their routes, including find cheaper fuel, sort truck stops by amentities and/or fuel type.  Plan smarter & save with Diesel Shark.
    .col-md-6
      .row
        .col-md-6
          .mobile-app-apple-link
            = link_to 'http://apple.com' do
              = image_tag("app_store_v9.png", class: "app-store")
        .col-md-6
          .mobile-app-google-link
            = link_to 'http://google.com' do
              =image_tag("android_v9.png", class: "comming-soon")
      .row
        .col-md-12
          .mobile-app-join
            %h2.join_us Join us today for FREE

.container
  .row.works-header
    .col-md-12
      =image_tag("how_diesel_shark_works.png")

  .row.myCarousel_1
    .col-md-12
      .carousel.slide#myCarousel
        %ol.carousel-indicators
          %li.active{"data-target" => "#myCarousel", "data-slide-to" => "0"}
          %li{"data-target" => "#myCarousel", "data-slide-to" => "1"}
          %li{"data-target" => "#myCarousel", "data-slide-to" => "2"}
          %li{"data-target" => "#myCarousel", "data-slide-to" => "3"}

        .carousel-inner
          .active.item{data: {step: 'step-1'}}
            .works-slide-image
              =image_tag("phone_v2.png")
          .item{data: {step: 'step-2'}}
            .works-slide-image
              =image_tag("phone_v3.png")
          .item{data: {step: 'step-3'}}
            .works-slide-image
              =image_tag("phone_v4.png")
          .item{data: {step: 'step-4'}}
            .works-slide-image
              =image_tag("phone_v5.png")

        %a.left.carousel-control{:href => "#myCarousel", "data-slide" => "prev"}
          %span.glyphicon.glyphicon-chevron-left
        %a.right.carousel-control{:href => "#myCarousel", "data-slide" => "next"}
          %span.glyphicon.glyphicon-chevron-right
  .row.step.step-1
    .col-xs-12.slider_1_title.text-center.hidden-md.hidden-lg
      %p Plan your route
    .col-md-2.step-image.hidden-sm.hidden-xs
      %p= image_tag("one_v2.png")
    .col-md-3.slider_1_title.hidden-sm.hidden-xs
      %p Plan your route
    .col-md-7.slider_1_text.hidden-sm.hidden-xs
      %p
        With just one tap,
        %br
        input your long-haul route
  .row.step.step-2
    .col-xs-12.slider_1_title.text-center.hidden-md.hidden-lg
      %p Filter options
    .col-md-2.step-image.hidden-sm.hidden-xs
      %p=image_tag("two_v3.png")
    .col-md-3.slider_1_title.hidden-sm.hidden-xs
      %p
        Filter options
    .col-md-7.slider_1_text.hidden-sm.hidden-xs
      %p
        Sort refueling options by amenities,
        %br
        fuel type, and/or price
  .row.step.step-3
    .col-xs-12.slider_1_title.text-center.hidden-md.hidden-lg
      %p Shark Route
    .col-md-2.step-image.hidden-sm.hidden-xs
      %p=image_tag("three_v4.png")
    .col-md-3.slider_1_title.hidden-sm.hidden-xs
      %p Shark Route
    .col-md-7.slider_1_text.hidden-sm.hidden-xs
      %p
        Shark Route auto-calculates
        %br
        best fueling option(s)
  .row.step.step-4
    .col-xs-12.slider_1_title.text-center.hidden-md.hidden-lg
      %p Save
    .col-md-2.step-image.hidden-sm.hidden-xs
      %p=image_tag("four_v5.png")
    .col-md-3.slider_1_title.hidden-sm.hidden-xs
      %p Save
    .col-md-7.slider_1_text.hidden-sm.hidden-xs
      %p
        Average long-haul savings
        %br
        of over $20/route
