.container
  .row.myCarousel_2
    .col-md-3
    .col-md-6
      .testimonial-top-image
        =image_tag("screen_out_only_v9.png")
    .col-md-3
  .row
    .carousel.testimonials-carousel.slide#testimonial-carousel
